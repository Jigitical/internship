{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": ["eslint:recommended","airbnb-base"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "max-len": ["error", { "code": 120 }],
        "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
        "newline-after-var": ["error", "always"]
    }
}
